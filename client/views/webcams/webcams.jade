.row
  .col-xs-12
    h3 {{title}}
.row
  .col-xs-3
    form(novalidate, role='form', name='webcamsForm')
      .form-group
        label(for='zip') Zip Code
        input.form-control#zip(ng-pattern='/^[0-9]{5}$/', required, ng-model='zip', type='text', name='zip', autofocus)
      .form-group
        button.btn.btn-success(ng-show='webcamsForm.$valid', ng-click='getWebcams()') Get Webcams
  .col-xs-9
.row(ng-show='webcams')
  .col-xs-12
    .panel.panel-default
      .panel-body
        .webcam(ng-repeat='webcam in webcams')
          img(ng-src='{{webcam.WIDGETCURRENTIMAGEURL}}')
